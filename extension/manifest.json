{
  "manifest_version": 3,
  "name": "LiveTranslate",
  "version": "1.0",
  "description": "Translate on-screen subtitles (YouTube, Vimeo, etc.) in real time.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.vimeo.com/*", "*://*.twitch.tv/*", "<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://*/*"]
      }
